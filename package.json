{
  "name": "Hello-Books-BE",
  "version": "1.0.0",
  "description": "A system that allows efficient, cost-effective management of our library",
  "main": "index.js",
  "scripts": {
    "build": "babel ./server -d dist",
    "start": "node dist/index.js",
    "start:dev": "nodemon --exec babel-node server/index.js",
    "heroku-postbuild": "npm run db:rollback && npm run build",
    "debug": "nodemon --exec babel-node server/index.js --inspect",
    "test": "npm run db:roll && npm run db:seed && nyc mocha --recursive test --timeout 20000 -r esm --exit && npm run db:back",
    "db:rollback": "npm run db:back && npm run db:roll && npm run db:seed",
    "db:roll": "sequelize db:migrate",
    "db:back": "sequelize db:migrate:undo:all",
    "db:seed": "sequelize db:seed:all",
    "coverage": "nyc report --reporter=text-lcov | coveralls"
  },
  "repository": "git@github.com:KvNGCzA/Hello-Books-BE.git",
  "author": "KvNGCzA <akanmuoluwadamilare@yahoo.com>",
  "license": "MIT",
  "dependencies": {
    "@babel/polyfill": "^7.4.4",
    "@sendgrid/mail": "^6.4.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.17.3",
    "express-validator": "^5.3.1",
    "faker": "^4.1.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.11",
    "morgan": "^1.9.1",
    "pg": "^7.11.0",
    "pg-hstore": "^2.3.2",
    "sequelize": "^5.8.6",
    "swagger-ui-express": "^4.0.5"
  },
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.5",
    "@babel/node": "^7.4.5",
    "@babel/preset-env": "^7.4.5",
    "@babel/register": "^7.4.4",
    "chai": "^4.2.0",
    "chai-http": "^4.3.0",
    "coveralls": "^3.0.3",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-plugin-import": "^2.17.3",
    "esm": "^3.2.25",
    "mocha": "^6.1.4",
    "mocha-lcov-reporter": "^1.3.0",
    "nodemon": "^1.19.1",
    "nyc": "^14.1.1",
    "sequelize-cli": "^5.4.0"
  },
  "engines": {
    "node": "v11.8.0",
    "npm": "6.5.0"
  }
}
